<h4 class="text-center mt-4">Добре дошли!</h4>
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <img class="col-lg-6 d-none d-lg-block" src="/public/images/js-bg.png" alt="" />
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Вход</h1>
                                {{> messages }}
                            </div>
                            <form class="user" action="/users/login" method="POST">
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control form-control-user"
                                        placeholder="Имейл адрес...">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" class="form-control form-control-user"
                                        placeholder="Парола...">
                                </div>
                                <button class="btn btn-primary btn-user btn-block">
                                    Вход
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/users/register">Нямаш профил</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>