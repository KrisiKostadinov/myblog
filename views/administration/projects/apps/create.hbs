<div class="w-100">
    <div class="justify-content-center">
        <div class="col-xl-12 col-lg-12 col-md-12 p-2">
            <div class="card border-0 shadow">
                <h4 class="text-center">Създаване на нов проект</h4>
                <div class="card-body p-0">
                    <div class="p-2">
                        {{> messages }}
                        <form class="user" action="/administration/projects/apps/create" enctype="multipart/form-data"
                            method="POST">
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label for="title">* Заглавие на проекта</label>
                                        <input required type="text" name="title" class="form-control form-control-user"
                                            id="title" value="{{titleProject}}" placeholder="Заглавие на проекта...">
                                    </div>
                                    <div class="form-group">
                                        <label for="subtitle">* Заглавие на проекта</label>
                                        <input type="text" name="subtitle" class="form-control form-control-user"
                                            id="subtitle" value="{{subtitle}}" placeholder="Подзаглавие на проекта...">
                                    </div>
                                    <div class="form-group">
                                        <label for="content">* Съдържание на проекта</label>
                                        <textarea class="w-100 form-control" name="content"
                                            placeholder="Съдържание на проекта..." rows="30"
                                            id="contnet">{{ content }}</textarea>
                                    </div>
                                    <button onclick="onSubmit(event)" type="submit"
                                        class="btn btn-primary btn-user btn-block mt-2">
                                        Създаване
                                    </button>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 form-group">
                                    <label for="images">Снимки</label>
                                    <input type="file" accept=".png" onchange="upload(event)" multiple name="images"
                                        class="form-control-user" id="images">
                                    <div id="view"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    tinymce.init({
        selector: 'textarea'
    });

    function upload(event) {
        const files = event.target.files;
        if (files) {
            document.getElementById('view').style.display = 'block';
            document.getElementById('view').textContent = '';
            for (const [key, value] of Object.entries(files)) {
                const createImg = document.createElement('img');
                createImg.setAttribute('src', URL.createObjectURL(value));
                createImg.className = 'w-50 mt-2 rounded';
                document.getElementById('view').appendChild(createImg);
            };
        } else {
            document.getElementById('view').style.display = 'none';
            document.getElementById('view').setAttribute('src', '');
        }
    }
</script>